<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/default_16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <odoo.controls.BezelImageView
        android:id="@+id/author_image"
        app:maskDrawable="@drawable/circle_mask"
        android:src="@drawable/avatar"
        android:layout_width="40dp"
        android:layout_marginRight="@dimen/default_8dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/default_8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subject"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/body_text_1"
                android:singleLine="true"
                android:ellipsize="end"
                android:fontFamily="@string/font_normal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/android_blue"
                android:fontFamily="@string/font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/author_name"
            android:textColor="@color/body_text_1"
            android:fontFamily="@string/font_condensed"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/short_body"
            android:textColor="@color/body_text_2"
            android:fontFamily="@string/font_light"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>