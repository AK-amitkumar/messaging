<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize" >

    <include
        android:id="@+id/loadingProgress"
        layout="@layout/listview_data_loading_progress"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone" />

    <odoo.controls.OList
        android:id="@+id/lstMeesages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        odoo:custom_layout="@layout/mail_list_item"
        odoo:emptyListIcon="@drawable/ic_action_inbox" >
    </odoo.controls.OList>

</LinearLayout>